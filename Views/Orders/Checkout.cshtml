@model Orders

    <form asp-action="Checkout" asp-controller="Orders" method="post" class="form-horizontal" role="form">
        <h4>You're just one step away from your delicious products.</h4>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Customer.FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.LastName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.City" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.City" class="form-control" />
                <span asp-validation-for="Customer.City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.Street" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.Street" class="form-control" />
                <span asp-validation-for="Customer.Street" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.State" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.State" class="form-control" />
                <span asp-validation-for="Customer.State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.Zip_Code" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.Zip_Code" class="form-control" />
                <span asp-validation-for="Customer.Zip_Code" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ShippedDate" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="ShippedDate" class="form-control" />
                <span asp-validation-for="ShippedDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.PhoneNumber" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Customer.Email" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-primary" value="Complete order" />
            </div>
        </div>

    </form>


@model ProductDetailViewModel


<div class="thumbnail">
    <img alt="@Model.Product.P_Name" src="~/images/@Model.Product.Image">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Product.Price</h3>
        <h3>
            <a href="#">@Model.Product.P_Name</a>
        </h3>
        <h4>@Model.Product.Description</h4>
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-pieId="@Model.Product.Product_Id">Add to cart</a>
        </p>
    </div>
</div>
